@model WebApplication1.Models.Account

@{
    ViewBag.Title = "createDetailAc";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@*<link rel="stylesheet" href="~/css/crProfile.css" />*@
<style>
    .backgrIMG {
        width: 100%;
        height: 100%;
        background: #9152f8;
        background: -webkit-linear-gradient(top, #7579ff, #b224ef);
        background: -o-linear-gradient(top, #7579ff, #b224ef);
        background: -moz-linear-gradient(top, #7579ff, #b224ef);
        background: linear-gradient(top, #7579ff, #b224ef);
        text-align: center;
    }

    body {
        font-family: 'Poppins', sans-serif;
        margin: 0;
    }

    /*.center {
        padding-bottom: 80px;
        padding-top: 80px;
        max-width: 500px;
        padding-left: 650px;
    }*/
    .profile {
        margin-left: 650px;
        width: 500px;
        background-color: white;
        border-radius: 5px;
    }

    .profile {
    }

    .placeinput {
        text-align: left;
        padding-left: 50px;
        padding-right: 50px;
    }

    #name {
        text-align: center;
        margin-top: 34px;
        margin-bottom: 34px;
    }

    hr {
        margin-left: 150px;
        width: 100px;
        border: 4px solid aqua;
        border-radius: 5px;
    }

    .tenuser {
        padding-left: 25px;
        font-family: Poppins-Regular;
        position: relative;
        border-bottom: 2px solid rgba(255,255,255,0.24);
        margin-bottom: 30px;
    }

    p {
        padding-left: 38px;
    }

    .input100 {
        border: none;
        border-bottom: 2px solid gray;
        font-family: Poppins-Regular;
        font-size: 16px;
        line-height: 1.2;
        display: block;
        width: 350px;
        height: 45px;
        background: transparent;
        padding: 0 5px 0 40px;
        color: gray;
    }

    input:focus {
        border: 2px solid gray;
    }

    .btn {
        border: none;
        display: inline-block;
        background: #00D5FF;
        color: black;
        padding: 8px 30px;
        margin: 30px 0;
        border-radius: 30px;
    }

</style>
<body>
    <div class="backgrIMG">
        <div class="center">
            <div class="profile">
                @using (Html.BeginForm("createDetailAc", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <span>
                        <img src="/logitech/WebApplication1/Content/img/index/Logitech-Logo-Vector-730x730.png" alt="">
                    </span>
                    <div class="placeinput">
                        <h2 id="name">
                            Create Profile
                            <hr style="vertical-align: middle">
                        </h2>
                        <div class="tenuser">
                            @Html.TextBoxFor(model => model.tenUser, new { @class = "input100", placeholder = "Name" })
                            <span style="color:red;padding-left:40px">@ViewBag.tenuser</span>
                        </div>
                        <div class="tenuser">
                            @Html.DropDownListFor(model => model.gioitinh, (IEnumerable<SelectListItem>)(new[]
                            {
                                new SelectListItem(){Text="Gender",Value="none"},
                                new SelectListItem(){Text="Nam"},
                                new SelectListItem(){Text="Nữ"},
                            }), new { @class = "input100" })
                        </div>
                        <div class="tenuser">
                            @Html.TextBoxFor(model => model.sdt, new { @class = "input100", placeholder = "phone number", type = "number" })
                            <span style="color:red;padding-left:40px">@ViewBag.sdt</span>
                        </div>
                        <div class="tenuser">
                            <p>Avatar</p>
                            @Html.TextBoxFor(model => model.avatar, new { name = "avatar", @class = "input100", type = "file", accept = "image/jpeg, image/png", onchange = "loadFile(event)" })
                        </div>
                        <div class="tenuser">
                            @Html.TextBoxFor(model => model.diaChi, new { @class = "input100", placeholder = "address",})
                            <span style="color:red;padding-left:40px">@ViewBag.sdt</span>
                        </div>
                    </div>
                    <div class="img">
                        <img id="output" width="300">
                    </div>
                    <div>
                        <button type="submit" class="btn">Create</button>
                        <button class="btn">@Html.ActionLink("Cancel", "Account", "Home", new { @style = "color:black" })</button>
                    </div>
                }
            </div>
        </div>
    </div>
</body>
<script>
    var loadFile = function (event) {
        var image = document.getElementById('output');
        image.src = URL.createObjectURL(event.target.files[0]);
    };
</script>

