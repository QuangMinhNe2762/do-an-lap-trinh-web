        <div class="row">
            <div class="col-5">
                <img src="~/Content/img/index/logo-godrej.png">
            </div>
            <div class="col-5">
                <img src="~/Content/img/index/logo-oppo.png">
            </div>
            <div class="col-5">
                <img src="~/Content/img/index/logo-paypal.png">
            </div>
            <div class="col-5">
                <img src="~/Content/img/index/logo-philips.png">
            </div>
            <div class="col-5">
                <img src="~/Content/img/index/logo-white.png">
