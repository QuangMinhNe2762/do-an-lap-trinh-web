@model WebApplication1.Models.sanPham

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .backgrIMG {
        width: 100%;
        height: 100%;
        background: #9152f8;
        background: -webkit-linear-gradient(top, #7579ff, #b224ef);
        background: -o-linear-gradient(top, #7579ff, #b224ef);
        background: -moz-linear-gradient(top, #7579ff, #b224ef);
        background: linear-gradient(top, #7579ff, #b224ef);
        text-align: center;
    }

    body {
        font-family: 'Poppins', sans-serif;
        margin: 0;
    }

    /*.center {
        padding-bottom: 80px;
        padding-top: 80px;
        max-width: 500px;
        padding-left: 650px;
    }*/
    .profile {
        margin-left: 650px;
        width: 500px;
        background-color: white;
        border-radius: 5px;
    }

    .profile {
    }

    .placeinput {
        text-align: left;
        padding-left: 50px;
        padding-right: 50px;
    }

    #name {
        text-align: center;
        margin-top: 34px;
        margin-bottom: 34px;
    }

    hr {
        margin-left: 150px;
        width: 100px;
        border: 4px solid aqua;
        border-radius: 5px;
    }

    .tenuser {
        padding-left: 25px;
        font-family: Poppins-Regular;
        position: relative;
        border-bottom: 2px solid rgba(255,255,255,0.24);
        margin-bottom: 30px;
    }

    p {
        padding-left: 38px;
    }

    .input100 {
        border: none;
        border-bottom: 2px solid gray;
        font-family: Poppins-Regular;
        font-size: 16px;
        line-height: 1.2;
        display: block;
        width: 350px;
        height: 45px;
        background: transparent;
        padding: 0 5px 0 40px;
        color: gray;
    }

    input:focus {
        border: 2px solid gray;
    }

    .btn {
        border: none;
        display: inline-block;
        background: #00D5FF;
        color: black;
        padding: 8px 30px;
        margin: 30px 0;
        border-radius: 30px;
    }
</style>
<body>
    <div class="backgrIMG">
        <div class="center">
            <div class="profile">
                @using (Html.BeginForm("editPro", "Home",new { @masp=Model.maSP }, FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <span>
                        <img src="/logitech/WebApplication1/Content/img/index/Logitech-Logo-Vector-730x730.png" alt="">
                    </span>
                    <div class="placeinput">
                        <h2 id="name">
                            Edit Product
                            <hr style="vertical-align: middle">
                        </h2>
                        <div class="tenuser">
                            @Html.TextBoxFor(model => model.tenSP, "", new { @class = "input100", placeholder = "Name" })
                            <span class="errorMesL" style="color: red;text-align:left;padding: 0px;width: 250px">@ViewBag.e_name</span>
                        </div>
                        <div class="tenuser">
                            @Html.DropDownListFor(model => model.loaiSP, (IEnumerable<SelectListItem>)(new[]
                            {
                                new SelectListItem(){Text="type",Value="none"},
                                new SelectListItem(){Text="Bàn Phím",Value="Bàn Phím"},
                                new SelectListItem(){Text="Chuột",Value="Chuột"},
                                new SelectListItem(){Text="Tai Nghe",Value="Tai Nghe"},
                                new SelectListItem(){Text="Lót chuột",Value="Lót chuột"},
                            }), new { @class = "input100" })
                            <span class="errorMesL" style="color: red;text-align:left;padding: 0px;width: 250px">@ViewBag.e_type</span>
                        </div>
                        <div class="tenuser">
                            @Html.TextBoxFor(model => model.giaSP, "", new { @class = "input100", placeholder = "Price", type = "number" })
                            <span class="errorMesL" style="color: red;text-align:left;padding: 0px;width: 250px">@ViewBag.e_price</span>
                        </div>
                        <div class="tenuser">
                            @Html.TextBoxFor(model => model.soluong, "", new { @class = "input100", type = "number", placeholder = "quantity" })
                            <span class="errorMesL" style="color: red;text-align:left;padding: 0px;width: 250px">@ViewBag.e_Quantity</span>
                        </div>
                        <div class="tenuser">
                            <p>Image Product main</p>
                            <input class="input100" name="imgMain" type="file" accept="image/jpeg, image/png" onchange="loadFile(event)" />
                            <span class="errorMesL" style="color: red;text-align:left;padding: 0px;width: 250px">@ViewBag.e_imgMain</span>
                        </div>
                        <div class="tenuser">
                            <p>Gallery</p>
                            <input type="file" name="multipleIMG" multiple="multiple" class="input100" accept="image/jpeg, image/png" />
                            <span class="errorMesL" style="color: red;text-align:left;padding: 0px;width: 250px">@ViewBag.e_gallery</span>
                        </div>
                        <div class="tenuser">
                            @Html.TextAreaFor(model => model.moTa, new { @class = "input100", placeholder = "description", @style = "max-width:400px" })
                            <span class="errorMesL" style="color: red;text-align:left;padding: 0px;width: 250px">@ViewBag.e_mota</span>
                        </div>
                    </div>
                    <div class="img">
                        <img id="output" width="300">
                    </div>
                    <div>
                        <button type="submit" class="btn">Submit</button>
                        <button class="btn">@Html.ActionLink("Cancel", "ProManage", "Home", new { @style = "color:black" })</button>
                    </div>
                }
            </div>
        </div>
    </div>
</body>
<script>
    var loadFile = function (event) {
        var image = document.getElementById('output');
        image.src = URL.createObjectURL(event.target.files[0]);
    };
</script>
